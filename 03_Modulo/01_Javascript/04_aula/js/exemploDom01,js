// adicionando event listner por boa pr√°tica
document.getElementById("exe").addEventListener("click", somar).value = soma

function somar() {
    let valor1 = Number(document.getElementById("v1").value)
    let valor2 = Number(document.getElementById("v2").value) 

    let soma = valor1 + valor2
    document.getElementById("r").value = soma
}


